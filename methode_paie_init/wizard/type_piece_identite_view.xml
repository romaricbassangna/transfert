<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record model="ir.ui.view" id="view_mp_piece_id_filter">
            <field name="name">Type de piece d'identification</field>
            <field name="model">mp.piece_id</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="mp_piece_id_view_tree">
            <field name="name">Type de piece d'identification</field>
            <field name="model">mp.piece_id</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="mp_piece_id_view_form">
            <field name="name">Type de piece d'identification</field>
            <field name="model">mp.piece_id</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col='4' colspan="4">
                            <field name="name" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record model="ir.actions.act_window" id="piece_id_model_action">
            <field name="name">Type de piece d'identification</field>
            <field name="res_model">mp.piece_id</field>
            <field name="view_mode">tree,form</field>
        </record>

</odoo>
