<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record model="ir.ui.view" id="view_mp_site_filter">
            <field name="name">Site</field>
            <field name="model">mp.site</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="mp_site_view_tree">
            <field name="name">Agence</field>
            <field name="model">mp.site</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="mp_site_view_form">
            <field name="name">Site</field>
            <field name="model">mp.site</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col='4' colspan="4">
                            <field name="name" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record model="ir.actions.act_window" id="mp_site_model_action">
            <field name="name">Site</field>
            <field name="res_model">mp.site</field>
            <field name="view_mode">tree,form</field>
        </record>

</odoo>
